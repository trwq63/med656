@using UAHFitVault.LogicLayer.Enums;

@{
    string cLayout = "";
    //Check to see if a user is logged in to the system.
    if (!User.Identity.IsAuthenticated) {
        cLayout = "~/Views/Shared/_NoAccessLayout.cshtml";

    }
    else {
        if (User.IsInRole(UserRole.Physician.ToString())) {
            cLayout = "~/Views/Shared/_PhysicianLayout.cshtml";
        }
        else {
            cLayout = "~/Views/Shared/_Layout.cshtml";
        }
    }
    Layout = cLayout;
}